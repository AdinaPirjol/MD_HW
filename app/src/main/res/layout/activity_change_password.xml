<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.app.md_hw.ChangePasswordActivity">

    <TextView
        android:id="@+id/txtChangePassword"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/change_password" />

    <Button
        android:id="@+id/buttonSaveNewPassword"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/save_password"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="144dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editRetype"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editNew"
        android:layout_above="@+id/editRetype"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="57dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Password"
        android:id="@+id/textNew"
        android:layout_above="@+id/editNew"
        android:layout_alignLeft="@+id/editNew"
        android:layout_alignStart="@+id/editNew" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Retype New Password"
        android:id="@+id/textRetype"
        android:layout_above="@+id/editRetype"
        android:layout_alignLeft="@+id/editRetype"
        android:layout_alignStart="@+id/editRetype" />

</RelativeLayout>
