<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.app.md_hw.HomeActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/home_welcome"
        android:id="@+id/textWelcome"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="6dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textLocation"
        android:layout_marginTop="33dp"
        android:text="Location"
        android:layout_below="@+id/textWelcome"
        android:layout_alignLeft="@+id/textDescription"
        android:layout_alignStart="@+id/textDescription" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textDescription"
        android:text="&quot;Description&quot;"
        android:layout_below="@+id/textLocation"
        android:layout_alignLeft="@+id/textTemperature"
        android:layout_alignStart="@+id/textTemperature" />

    <TextView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/textTemperature"
        android:text="temp C"
        android:layout_below="@+id/textDescription"
        android:layout_alignLeft="@+id/textDate"
        android:layout_alignStart="@+id/textDate" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textDate"
        android:text="Date"
        android:layout_below="@+id/textTemperature"
        android:layout_alignRight="@+id/textWelcome"
        android:layout_alignEnd="@+id/textWelcome" />

    <ImageView
        android:layout_width="15dp"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_alignTop="@+id/textLocation"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/textDate"
        android:layout_toLeftOf="@+id/textLocation"
        android:layout_toStartOf="@+id/textLocation" />

    <Button
        android:id="@+id/changePassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Password"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/buttonInterests"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Interests"
        android:layout_above="@+id/changePassword"
        android:layout_alignRight="@+id/changePassword"
        android:layout_alignEnd="@+id/changePassword"
        android:layout_alignLeft="@+id/changePassword"
        android:layout_alignStart="@+id/changePassword" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Favorite Links"
        android:id="@+id/textFavLinks"
        android:layout_marginTop="39dp"
        android:layout_below="@+id/textDate"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textInterestsFound"
        android:layout_below="@+id/text1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/text1"
        android:layout_below="@+id/textFavLinks"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:autoLink="web" />

    <TextView
        android:id="@+id/text2"
        android:layout_below="@+id/text1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:autoLink="web" />

    <TextView
        android:id="@+id/text3"
        android:layout_below="@+id/text2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:autoLink="web" />


    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit links"
        android:id="@+id/myBtn"
        android:layout_alignBottom="@+id/textFavLinks"
        android:layout_alignRight="@+id/buttonInterests"
        android:layout_alignEnd="@+id/buttonInterests" />

</RelativeLayout>
